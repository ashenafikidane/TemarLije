<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectStudents">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_students_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_students_toolbar"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_addStudents"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_addGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_addStudents"
        android:scrollbars="vertical" />

</RelativeLayout>